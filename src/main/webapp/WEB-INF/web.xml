<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <!-- Servlet Definitions -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.ocsports.servlets.UserServlet</servlet-class>
        <init-param>
            <param-name>alias</param-name>
            <param-value>goUser</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>PoolServlet</servlet-name>
        <servlet-class>com.ocsports.servlets.PoolServlet</servlet-class>
        <init-param>
            <param-name>alias</param-name>
            <param-value>goPool</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.ocsports.servlets.AdminServlet</servlet-class>
        <init-param>
            <param-name>alias</param-name>
            <param-value>goAdmin</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>StatsServlet</servlet-name>
        <servlet-class>com.ocsports.servlets.StatsServlet</servlet-class>
        <init-param>
            <param-name>alias</param-name>
            <param-value>goStats</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>TimerServlet</servlet-name>
        <servlet-class>com.ocsports.servlets.TimerServlet</servlet-class>
        <init-param>
            <param-name>alias</param-name>
            <param-value>goTimer</param-value>
        </init-param>
        <init-param>
            <param-name>taskCount</param-name>
            <param-value>4</param-value>
        </init-param>
        <init-param>
            <param-name>taskClass0</param-name>
            <param-value>com.ocsports.timer.CheckGameTask,10</param-value>
        </init-param>
        <init-param>
            <param-name>taskClass1</param-name>
            <param-value>com.ocsports.timer.CheckNFLScoresESPNMobile,5</param-value>
        </init-param>
        <init-param>
            <param-name>taskClass2</param-name>
            <param-value>com.ocsports.timer.CheckSeriesTask,60</param-value>
        </init-param>
        <init-param>
            <param-name>taskClass3</param-name>
            <param-value>com.ocsports.timer.SendReminderTask,60</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>DraftServlet</servlet-name>
        <servlet-class>com.ocsports.servlets.DraftServlet</servlet-class>
        <init-param>
            <param-name>alias</param-name>
            <param-value>goDraft</param-value>
        </init-param>
    </servlet>
    <!-- SERVLET MAPPINGS -->
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/servlet/goUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PoolServlet</servlet-name>
        <url-pattern>/servlet/goPool</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StatsServlet</servlet-name>
        <url-pattern>/servlet/goStats</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimerServlet</servlet-name>
        <url-pattern>/servlet/goTimer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/servlet/goAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DraftServlet</servlet-name>
        <url-pattern>/servlet/goDraft</url-pattern>
    </servlet-mapping>
    <!-- SESSION CONFIGURATION -->
    <session-config>
        <session-timeout>20</session-timeout>
    </session-config>
    <!-- JNDI Resource for Database Connection -->
    <resource-ref>
        <description>OC Sports MySql DB Pool</description>
        <res-ref-name>jdbc/ocsportsDB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>